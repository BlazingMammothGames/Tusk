<macro name="makeTree(tree,depth)">
	::switch tree::
	<li><a href="/::api.config.rootPath::::api.getTreeUrl(tree)::">::api.getTreeName(tree)::</a></li>
	::case::
		<li><a href="#" class="nav-toggle"><i class="fa fa-chevron-right"></i> ::api.getTreeName(tree)::</a>
			<ul>
				::foreach sub args[2]::
					$$makeTree(::sub::,::depth + 1::)
				::end::
			</ul>
		</li>
	::end::
</macro>
var navContent='
::foreach tree root::
	$$makeTree(::tree::,::0::)
::end::
';
