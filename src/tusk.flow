{
	flow: {
		build: {
			boot: 'TuskApp'
		}
	},
	project: {
		name: 'tusk',
		version: '1.0.0-prealpha',
		author: 'FuzzyWuzzie',
		app: {
			icon: 'flow/icons/ => tusk'
		},
		build: {
			flags: [
				"-resource flow/assets/shaders/default.colour.vert@default.vert",
				"-resource flow/assets/shaders/default.colour.frag@default.frag"
			],
			dependencies: {
				snow: '*'
			},
			defines: ['log_fatal', 'log_error', 'log_warning', 'log_info', 'assertions'],
			files: {
				boot: {
					path: 'flow/boot/TuskApp.hx => haxe/TuskApp.hx',
					template: ['project']
				}
			}
		}
	}
}