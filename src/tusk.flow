{
	flow: {
		build: {
			boot: 'TuskApp'
		}
	},
	project: {
		name: 'tusk',
		version: '1.0.0-prealpha',
		author: 'FuzzyWuzzie',
		app: {
			icon: 'flow/icons/ => tusk'
		},
		build: {
			flags: [
				"-resource flow/assets/shaders/unlit.textured.vert@unlit.textured.vert",
				"-resource flow/assets/shaders/unlit.textured.frag@unlit.textured.frag",
				"-resource flow/assets/images/blazingmammothgames.png@blazingmammothgames.png"
			],
			dependencies: {
				snow: '*',
				promhx: '*',
				partials: '*',
				glm: '*'
			},
			defines: ['log_fatal', 'log_error', 'log_warning', 'log_info', 'assertions'],
			files: {
				boot: {
					path: 'flow/boot/TuskApp.hx => haxe/TuskApp.hx',
					template: ['project']
				}
			}
		},
		files: {
			splashSound: 'flow/assets/sounds/blazingmammothgames.ogg => assets/sounds/blazingmammothgames.ogg'
		}
	}
}